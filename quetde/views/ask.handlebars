<h1>hay hoi mot cau</h1>

<form action ="/question/add" method="POST">
    <textarea id="question" maxlength="200" cols="30" rows="6" name="questionContent"
                style="display: block;
                    width: 80%;
                    height: 50px;
                    padding: 20px 12px;
                    font-size: 14px;
                    color: #555;
                    border: 1px solid #ccc;
                    border-radius: 4px"></textarea>
            
    <p>Còn <span id="remain">200</span>/200 kí tự</p>


    <button type="submit"
            style=" color: #fff;
                    background-color: #337ab7;
                    border-color: #2e6da4;
                    display:block;
                    padding: 6px 12px;                            
                    text-align: center;                    
                    cursor: pointer;
                    border: 1px solid;
                    border-radius: 4px;             
     ">
        Gửi
    </button>
    
</form>

<script>
    let char = 200;

    document.getElementById("question").addEventListener("input", function() {
        document.getElementById("remain").innerText = char - document.getElementById("question").value.length
    });
</script>